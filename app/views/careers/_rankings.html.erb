<%= form_for([@university,@career, @career.rankings.new]) do |f| %>



<div id="user_stars"></div>
<br>
  <div class="form-group">
    <%= f.text_field :name, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :link, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :position, rows: 3, class: "form-control" %> 
  </div>


  <div class="actions">
    <%= f.submit "Create Ranking", class: "button button_red" %>
  </div>

  <hr>

<% end %>

