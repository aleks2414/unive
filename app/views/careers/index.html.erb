<p id="notice"><%= notice %></p>

<h1>Listing Careers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>University</th>
      <th>Country</th>
      <th>Name</th>
      <th>Area</th>
      <th>Description</th>
      <th>For who</th>
      <th>Duration</th>
      <th>Modality</th>
      <th>Shift</th>
      <th>Email</th>
      <th>Website</th>
      <th>Facebook</th>
      <th>Twitter</th>
      <th>Linkedin</th>
      <th>Blog</th>
      <th>Aprox cost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= career.user %></td>
        <td><%= career.university %></td>
        <td><%= career.name %></td>
        <td><%= career.area %></td>
        <td><%= career.description %></td>
        <td><%= career.for_who %></td>
        <td><%= career.duration %></td>
        <td><%= career.modality %></td>
        <td><%= career.shift %></td>
        <td><%= career.email %></td>
        <td><%= career.website %></td>
        <td><%= career.facebook %></td>
        <td><%= career.twitter %></td>
        <td><%= career.linkedin %></td>
        <td><%= career.blog %></td>
        <td><%= career.aprox_cost %></td>
        <td><%= link_to 'Show', university_career_path(@university, career) %></td>
        <td><%= link_to 'Edit', edit_university_career_path(@university, career) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Career', new_university_career_path(@university) %>
