<%= form_for([@university,@career, @career.reviews.new]) do |f| %>



<div id="user_stars"></div>
<br>
  <div class="form-group">
    <%= f.number_field :star, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_area :comment, rows: 3, class: "form-control" %> 
  </div>


  <div class="actions">
    <%= f.submit "Create Review", class: "button button_red" %>
  </div>

  <hr>

<% end %>



