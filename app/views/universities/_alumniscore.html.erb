<!-- Modal -->
<div class="modal fade" id="AlumnimyModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Your Alumni Score</h4>
      </div>
      <div class="modal-body">

<%= form_for [@university, @alumni_score], remote: true, :html => {:id => 'alumni_review_form'} do |f| %>
  <% if @alumni_score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alumni_score.errors.count, "error") %> prohibited this alumni_score from being saved:</h2>

      <ul>
      <% @alumni_score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :alumni_score %><br>
    <%= f.number_field :alumni_score %>
  </div>
  <div class="actions">
    <%= f.submit class: "botones button_red" %>
  </div>
<% end %>
</div>
    </div>
  </div>
</div>

<% if @university.average_alumni_score.between?(0, 0.99) %>
<h5><span class="fa fa-star-half"></span>
<% elsif @university.average_alumni_score.between?(1, 1.49) %>
<h5><span class="fa fa-star"></span>
<% elsif @university.average_alumni_score.between?(1.5, 1.99) %>
<h5><span class="fa fa-star"><span class="fa fa-star-half"></span>
<% elsif @university.average_alumni_score.between?(2, 2.49) %>
<h5><span class="fa fa-star"><span class="fa fa-star"></span>
<% elsif @university.average_alumni_score.between?(2.5, 2.99) %>
<h5><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star-half"></span>
<% elsif @university.average_alumni_score.between?(3, 3.49) %>
<h5><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"></span>
<% elsif @university.average_alumni_score.between?(3.5, 3.99) %>
<h5><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star-half"></span>
<% elsif @university.average_alumni_score.between?(4, 4.49) %>
<h5><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"></span>
<% elsif @university.average_alumni_score.between?(4.5, 4.99) %>
<h5><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star-half"></span>
<% elsif @university.average_alumni_score.between?(5, 5.99) %>
<h5><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"><span class="fa fa-star"></span>
<% end %>
<span id="alumni_reviews_count">(<%= @university.average_alumni_score %>)</span></h5>


<!-- Trigger the modal with a button -->
<button type="button" class="vote" data-toggle="modal" data-target="#AlumnimyModal"><span class="fa fa-pencil"></span></button>


