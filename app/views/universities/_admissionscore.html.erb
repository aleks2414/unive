        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Your Admission Score</h4>
      </div>
      <div class="modal-body">

<%= form_for [@university, @admission_score], remote:true, :html => {:id => 'admission_review_form'} do |f| %>
