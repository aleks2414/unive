      <h5><span class="fa fa-coffee"></span>Cafeteria</h5>
      <% else %>
      <h5><span class="fa fa-coffee"></span><strike>Cafeteria</strike></h5>
      <% end %>

      <% if @university.is_libray == true %>
      <h5><span class="fa fa-book"></span>Library</h5>
      <% else %>
      <h5><span class="fa fa-book"></span><strike>Library</strike></h5>
      <% end %>

