  var map = new google.maps.Map(document.getElementById('map2'), {
    zoom: 16,
    center: myLatLng,
    scrollwheel: false
  });


  var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: '<%= @university.name %>'
  });
}

