<!-- Modal -->
<div class="modal fade" id="InvestmentmyModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Your Investment Score</h4>
      </div>
      <div class="modal-body">

<%= form_for [@university, @investment_score], remote: true, :html => {:id => 'investment_review_form'} do |f| %>
  <% if @investment_score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@investment_score.errors.count, "error") %> prohibited this investment_score from being saved:</h2>

      <ul>
      <% @investment_score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :investment_score %><br>
    <%= f.number_field :investment_score %>
  </div>
  <div class="actions">
    <%= f.submit class: "botones button_red" %>
  </div>
<% end %>
</div>
    </div>
  </div>
</div>

<% if @university.average_investment_score.between?(0, 0.99) %>
<h5><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(1, 1.49) %>
<h5><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(1.5, 1.99) %>
<h5><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(2, 2.49) %>
<h5><span class="fa fa-money"><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(2.5, 2.99) %>
<h5><span class="fa fa-money"><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(3, 3.49) %>
<h5><span class="fa fa-money"><span class="fa fa-money"><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(3.5, 3.99) %>
<h5><span class="fa fa-money"><span class="fa fa-money"><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(4, 4.49) %>
<h5><span class="fa fa-money"><span class="fa fa-money"><span class="fa fa-money"><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(4.5, 4.99) %>
<h5><span class="fa fa-money"><span class="fa fa-money"><span class="fa fa-money"><span class="fa fa-money"></span>
<% elsif @university.average_investment_score.between?(5, 5.99) %>
