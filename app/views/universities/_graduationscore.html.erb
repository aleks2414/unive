      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Your Graduation Score</h4>
      </div>
      <div class="modal-body">

<%= form_for [@country,@university, @graduation_score], remote: true, :html => {:id => 'graduation_review_form'} do |f| %>
