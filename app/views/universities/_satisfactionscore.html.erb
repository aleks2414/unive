<!-- Modal -->
<div class="modal fade" id="SatisfactionmyModal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Your Satisfaction Score</h4>
      </div>
      <div class="modal-body">

<%= form_for [@country,@university, @satisfaction_score], remote: true, :html => {:id => 'satisfaction_review_form'} do |f| %>
  <% if @satisfaction_score.errors.any? %>
